@model IEnumerable<ASPCore_Demo.Models.EF.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<h1>List product</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form method="get" asp-action="Index">
   <p>
        <input type="text" name="sreachString" placeholder="Enter name product you need find..." style="width:500px"/>
        <input type="submit" value="Search"/> |
        <a asp-action="Index">Reset All</a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th style="width:30px;">
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @(++i)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @item.Price.ToString("#,##0") VND
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit
                    <i class="fa-solid fa-pen-to-square"></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details
                    <i class="fa-solid fa-info"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
